# FFMPEG FOR AWS


yum install -y libbluray-devel openjpeg-devel  orc-devel speex-devel libtheora-devel libvorbis-devel  libXext-devel
yum install gnutls gnitls-devel fribidi-devel   -y


cd /data/soft
